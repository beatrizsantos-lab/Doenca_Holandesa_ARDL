dados_pim <- read_csv2("PIM.csv") # <-- AJUSTE O NOME DO ARQUIVO SE NECESS√ÅRIO
dados_icbr <- read_csv2("ICBR.csv")
dados_cambio <- read_csv2("INPC(C√¢mbio).csv")
